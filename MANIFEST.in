# Eğitim Paint Uygulaması - MANIFEST.in
# Bu dosya, paket dağıtımında hangi dosyaların dahil edileceğini belirler

# README ve lisans dosyaları
include README.md
include LICENSE
include CHANGELOG.md
include CONTRIBUTING.md

# Setup dosyası
include setup.py

# Requirements dosyası
include demo1/requirements.txt

# Uygulama dosyaları
include demo1/*.py
include demo1/*.png
include demo1/*.md

# Git ignore
include .gitignore

# Sanal ortam hariç tut
global-exclude .venv/
global-exclude __pycache__/
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude .Python
global-exclude build/
global-exclude develop-eggs/
global-exclude dist/
global-exclude downloads/
global-exclude eggs/
global-exclude .eggs/
global-exclude lib/
global-exclude lib64/
global-exclude parts/
global-exclude sdist/
global-exclude var/
global-exclude wheels/
global-exclude pip-wheel-metadata/
global-exclude share/python-wheels/
global-exclude *.egg-info/
global-exclude .installed.cfg
global-exclude *.egg
global-exclude MANIFEST

# IDE dosyaları hariç tut
global-exclude .vscode/
global-exclude .idea/
global-exclude *.swp
global-exclude *.swo
global-exclude *~

# Windows dosyaları hariç tut
global-exclude Thumbs.db
global-exclude ehthumbs.db
global-exclude Desktop.ini

# macOS dosyaları hariç tut
global-exclude .DS_Store
global-exclude .AppleDouble
global-exclude .LSOverride
